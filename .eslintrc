{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [ 2, "never"],
    "semi-spacing": 0,
    "no-extra-semi": 1,
    "no-unused-vars": [ 1, { "vars": "all", "args": "none" }
    ],
    "no-trailing-spaces": 2,
    "no-console": 1
  }
}
